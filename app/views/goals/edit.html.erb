<h1>Edit Goal</h1>
<form action="<%= user_goal_url(@goal) %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" id="authenticity_token">
  <input type="hidden" name="_method" value="put">

  <label for="goal_name">Goal Name</label>
  <input type="text" name="goal[name]" value="<%= @goal.name %>" id="goal_name"><br>

  <label for="goal_privacy">Privacy</label>
  <select name="goal[privacy]" id="goal_privacy">
    <option value="private"<%= show_selected(@goal, "private") %>>Private</option>
    <option value="public"<%= show_selected(@goal, "public") %>>Public</option>
  </select><br>

  <p><input type="submit" value="Edit Goal"></p>
</form>